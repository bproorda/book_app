<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../layout/head') %>
    </head>
    <body>
    <header>
        <%- include('../layout/header') %>
    </header>
    <div class="wrapper">
        <div class="search-heading">
            <h2>Home</h2>
        </div>
       <section class="book-view-container">
           <ul>
               <% books.forEach(book => { %>
                  <li class="book-item">
                    <% let imageSource =  book.image_url ? book.image_url : "https://i.imgur.com/J5LVHEL.jpg" %>
                    <img src="<%= imageSource %>" />
                     <h2>Book: <%= book.title %> </h2>
                     <h3><%= book.author %></h3>
                 </li>
                 <% }) %>
           </ul>
       </section>
    </div>
        
        <script src="" async defer></script>
    
    <footer> </footer>
    </body>
</html>